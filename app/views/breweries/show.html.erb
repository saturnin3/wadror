<p id="notice"><%= notice %></p>

<p>
  <h2> <%= @brewery.name %> </h2>
</p>

<p>
  <i>Established in <%= @brewery.year %> </i>
</p>

<p>
  <td>Number of beers:</td>
  <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %>
  <% end %>
</p>

<P><% if @brewery.ratings.empty? %>
 Has no ratings!
<% else %>
 Has <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= @brewery.average_rating %>
<% end %>
</p>
<br>
<!-- <%= link_to 'List of beers', beers_path %> | -->
<p><%= link_to('Destroy the brewery', brewery_path(@brewery), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" ) if current_user %></p>

<p><%= link_to('Edit', edit_brewery_path(@brewery) ) if current_user %></p>
