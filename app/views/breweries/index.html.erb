<h1>Listing Breweries</h1>
<p>  </p>

<div class="panel panel-default">
  <div class="panel-heading">Number of breweries: <%= @breweries.count %></div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
       <!-- <td><%= link_to 'Show', brewery %></td> -->
        <!--<td><%= link_to('Edit', edit_brewery_path(brewery)) if current_user %></td>
        <td><%= link_to('Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' }) if current_user %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to('Create a new brewery', new_brewery_path, class:"btn btn-primary btn-sm") if current_user %>
