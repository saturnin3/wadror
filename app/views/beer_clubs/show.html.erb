<p id="notice"><%= notice %></p>

<h2> <%= @beer_club.to_s %> </h2>

<p> Founded <%= @beer_club.founded %> </p>

<strong> Members </strong>

<ul>
  <% @beer_club.members.each do |member| %>
    <li> <%= link_to member.username, user_path(member.id) %> </li>
  <% end %>
</ul>
<br>


<p> <%= link_to('Edit', edit_beer_club_path(@beer_club)) if current_user %>
<br><%= link_to('Destroy the club', beer_club_path(@beer_club), method: :delete, data: { confirm: 'Are you sure?' }) if current_user %></p>
