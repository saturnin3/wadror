<h1>Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to 'Name', beers_path(order: "name")%></th>
      <th><%= link_to 'style', beers_path(order: "style")%></th>
      <th><%= link_to 'brewery', beers_path(order: "brewery")%></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
       <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= link_to beer.style.name, style_path(beer.style_id)%></td>
        <td><%= link_to beer.brewery.name, brewery_path(beer.brewery_id) %></td>
       <!-- <td><%= link_to 'Show', beer %></td> -->
        <!--<td><%= link_to('Edit', edit_beer_path(beer)) if current_user %></td>
        <td><%= link_to('Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' }) if current_user %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('Create a new beer', new_beer_path, class:"btn btn-primary btn-sm") if current_user %>

