<p id="notice"><%= notice %></p>

<p>
  <h2> <%= @user.username %></h2>
  Has made <%=pluralize(@user.ratings.count, 'rating') %>, average <%= @user.average_rating %>
</p>

<p> Member of
  <% @user.beer_clubs.each do |club| %>
    <%= link_to club.name, beer_club_path(club.id) %>
  <% end %>
</p>
<p>
Favorite beer style: <%= @user.favorite_style %> <br>
Favorite brewery: <%=  @user.favorite_brewery.name unless @user.favorite_brewery.nil? %>
</p>

<strong>ratings</strong>
<ul>
  <% @user.ratings.each do |rating| %>
    <li>
      <%= rating %>
      <%if @user == current_user %>
        <%= link_to 'delete', rating_path(rating.id), method: :delete, data: { confirm: 'Are you sure?'} %>
      <% end %>
    </li>
  <% end %>
</ul>
<br>

<%if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %> |
<%end%>
<%= link_to 'Back', users_path %>
